    <Fragment slot="scripts">
        <script is:inline>
            // ハンバーガーメニュー
            const hamburgerBtn = document.getElementById('hamburgerBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            hamburgerBtn.addEventListener('click', () => {
                hamburgerBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });

            // モバイルメニューのリンククリック時に閉じる
            document.querySelectorAll('.mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    hamburgerBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });

            // ビフォーアフタースライダー
            const baSlider = document.getElementById('baSlider');
            const baPrevBtn = document.getElementById('baPrevBtn');
            const baNextBtn = document.getElementById('baNextBtn');

            function slideBA(direction) {
                const itemWidth = document.querySelector('.ba-item').offsetWidth + 32; // width + gap
                
                if (direction === 'next') {
                    baSlider.scrollBy({ left: itemWidth, behavior: 'smooth' });
                } else {
                    baSlider.scrollBy({ left: -itemWidth, behavior: 'smooth' });
                }
            }

            baPrevBtn.addEventListener('click', () => slideBA('prev'));
            baNextBtn.addEventListener('click', () => slideBA('next'));

            // スムーズスクロール（ヘッダーの高さ考慮）
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        const headerOffset = 100;
                        const elementPosition = target.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
            
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: "smooth"
                        });
                    }
                });
            });

            // ギャラリー画像切り替え
            const galleryImages = [
                '/salon/images/salon-exterior.jpg',
                '/salon/images/salon-interior1.jpg',
                '/salon/images/salon-interior2.jpg',
                '/salon/images/salon-equipment1.jpg',
                '/salon/images/salon-equipment2.jpg',
                '/salon/images/salon-waiting.jpg'
            ];

            const thumbs = document.querySelectorAll('.gallery-thumb');
            const mainImage = document.querySelector('#galleryMain img');

            thumbs.forEach(thumb => {
                thumb.addEventListener('click', () => {
                    const index = parseInt(thumb.dataset.index);
                    
                    mainImage.style.opacity = 0;
                    
                    setTimeout(() => {
                        mainImage.src = galleryImages[index];
                        mainImage.style.opacity = 1;
                    }, 200);
                    
                    thumbs.forEach(t => t.classList.remove('active'));
                    thumb.classList.add('active');
                });
            });
        </script>
    </Fragment>
</BaseLayout>


