    <Fragment slot="scripts">
        <script is:inline>
            // ハンバーガーメニュー
            const hamburgerBtn = document.getElementById('hamburgerBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            hamburgerBtn.addEventListener('click', () => {
                hamburgerBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });

            // モバイルメニューのリンククリック時に閉じる
            document.querySelectorAll('.mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    hamburgerBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });

            // ヒーロー背景カルーセル
            let heroSlideIndex = 0;
            const heroSlides = document.querySelectorAll('.hero-slide');

            function showHeroSlide() {
                heroSlides.forEach(slide => slide.classList.remove('active'));
                heroSlideIndex = (heroSlideIndex + 1) % heroSlides.length;
                heroSlides[heroSlideIndex].classList.add('active');
            }

            setInterval(showHeroSlide, 5000);

            // スムーズスクロール
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            });

            // 院内設備カルーセル
            let currentFacility = 0;
            const facilitySlides = document.querySelectorAll('.facility-slide');
            const totalFacilities = facilitySlides.length;

            // ドットインジケーター生成
            const dotsContainer = document.getElementById('facilityDots');
            if (dotsContainer && totalFacilities > 0) {
                for (let i = 0; i < totalFacilities; i++) {
                    const dot = document.createElement('div');
                    dot.className = 'slider-dot' + (i === 0 ? ' active' : '');
                    dot.onclick = () => goToFacility(i);
                    dotsContainer.appendChild(dot);
                }
            }

            function changeFacility(direction) {
                if (facilitySlides.length === 0) return;
                
                facilitySlides[currentFacility].classList.remove('active');
                
                if (direction === 'next') {
                    currentFacility = (currentFacility + 1) % totalFacilities;
                } else {
                    currentFacility = (currentFacility - 1 + totalFacilities) % totalFacilities;
                }
                
                facilitySlides[currentFacility].classList.add('active');
                updateDots();
            }

            function goToFacility(index) {
                if (facilitySlides.length === 0) return;
                
                facilitySlides[currentFacility].classList.remove('active');
                currentFacility = index;
                facilitySlides[currentFacility].classList.add('active');
                updateDots();
            }

            function updateDots() {
                const dots = document.querySelectorAll('.slider-dot');
                dots.forEach((dot, index) => {
                    if (index === currentFacility) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                });
            }

            // スライダーボタン
            document.getElementById('facilityPrevBtn').addEventListener('click', () => changeFacility('prev'));
            document.getElementById('facilityNextBtn').addEventListener('click', () => changeFacility('next'));

            // 自動スライド
            if (facilitySlides.length > 0) {
                setInterval(() => changeFacility('next'), 6000);
            }
        </script>
